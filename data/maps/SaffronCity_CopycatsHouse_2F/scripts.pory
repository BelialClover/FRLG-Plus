script SaffronCity_CopycatsHouse_2F_EventScript_Copycat{
    goto_if_questlog(EventScript_ReleaseEnd)
    special(QuestLog_CutRecording)
    lock
    faceplayer
    checkitem(ITEM_POKE_DOLL)
    if(var(VAR_RESULT))
    {
        goto(EventScript_MimicTutor)
    }
    checkplayergender
    if(var(VAR_RESULT) == MALE)
    {
        msgbox("{PLAYER}: Hi!\nDo you like POKéMON?\p{PLAYER}: Uh, no, I just asked you.\p{PLAYER}: Huh?\nYou're strange!\pCOPYCAT: Hmm? Quit mimicking?\nBut, that's my favorite hobby!")
	    goto(EventScript_MimicTutor)
    }
    msgbox("{PLAYER}: Hi.\nYou must like POKéMON.\p{PLAYER}: No, not me.\nI asked you.\p{PLAYER}: Pardon?\nYou're weird!\l\lCOPYCAT: Hmm? Quit mimicking?\lBut that's my favorite hobby!")
	goto(EventScript_MimicTutor)
}

