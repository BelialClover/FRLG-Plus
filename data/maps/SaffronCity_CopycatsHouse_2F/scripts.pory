mapscripts SaffronCity_CopycatsHouse_2F_MapScripts{
    MAP_SCRIPT_ON_TRANSITION {
        if(!flag(FLAG_TUTOR_MIMIC))
        {
            setflag(FLAG_TEMP_8)
        }
        if(var(VAR_MIMIC_RETAUGHT) < 7)
        {
            setflag(FLAG_TEMP_1)
            if(var(VAR_MIMIC_RETAUGHT) < 6)
            {
                setflag(FLAG_TEMP_2)
                if(var(VAR_MIMIC_RETAUGHT) < 5)
                {
                    setflag(FLAG_TEMP_3)
                    if(var(VAR_MIMIC_RETAUGHT) < 4)
                    {
                        setflag(FLAG_TEMP_4)
                        if(var(VAR_MIMIC_RETAUGHT) < 3)
                        {
                            setflag(FLAG_TEMP_5)
                            if(var(VAR_MIMIC_RETAUGHT) < 2)
                            {
                                setflag(FLAG_TEMP_6)
                                if(var(VAR_MIMIC_RETAUGHT) < 1)
                                {
                                    setflag(FLAG_TEMP_7)
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

script SaffronCity_CopycatsHouse_2F_EventScript_Doduo{
    lock
    faceplayer
    waitse
    playmoncry(SPECIES_DODUO, CRY_MODE_NORMAL)
    bufferspeciesname(0, SPECIES_DODUO)
    msgbox("{STR_VAR_1}: Giiih!\pPRETTY MIRROR LOOK AT ME,\nSEE HOW PRETTY I CAN BE?")
    waitmoncry
    release
    end
}

