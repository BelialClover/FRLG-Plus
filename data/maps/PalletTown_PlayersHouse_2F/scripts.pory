mapscripts PalletTown_PlayersHouse_2F_MapScripts{
    MAP_SCRIPT_ON_TRANSITION {
        getplayerxy(VAR_RESULT, VAR_0x8008)
        if(var(VAR_RESULT) != 6 && var(VAR_0x8008) != 6)
        {
            setvar(VAR_TEMP_0, 1)
        }
        if(var(VAR_TEMP_0) == 0)
        {
            setrespawn(SPAWN_PALLET_TOWN)
            end
        }
    }
    MAP_SCRIPT_ON_WARP_INTO_MAP_TABLE [
        VAR_TEMP_0, 0 {
            turnplayer(DIR_NORTH)
            setvar(VAR_TEMP_0, 1)
            end
        }
    ]
}

script PalletTown_PlayersHouse_2F_EventScript_NES
{
    msgbox("{PLAYER} played with the NES.\p…Okay!\nIt's time to go!", MSGBOX_SIGN, PalletTown_PlayersHouse_2F_Text_NES_Spa, PalletTown_PlayersHouse_2F_Text_NES_Fre, PalletTown_PlayersHouse_2F_Text_NES_Ita, PalletTown_PlayersHouse_2F_Text_NES_Ger, PalletTown_PlayersHouse_2F_Text_NES_Por)
	end
}text(local) PalletTown_PlayersHouse_2F_Text_NES_Spa{
    "¡{PLAYER} está jugando a la NES!\pBueno, más vale que me ponga\nen marcha."
}text(local) PalletTown_PlayersHouse_2F_Text_NES_Fre{
    "{PLAYER} joue à la NES!\p… Bon!\nFaut y aller!"
}text(local) PalletTown_PlayersHouse_2F_Text_NES_Ita{
    "{PLAYER} ha giocato con il NES!\pBene!\nAndiamo ora!"
}text(local) PalletTown_PlayersHouse_2F_Text_NES_Ger{
