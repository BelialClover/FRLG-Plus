}text(local) PalletTown_PlayersHouse_2F_Text_NES_Por{
    "{PLAYER} jogou com a NES!\p...Está bem!\nÉ hora de ir!"
}

script PalletTown_PlayersHouse_2F_EventScript_Sign
{
	msgbox("It's a posted notice…\pIf you're confused, ask for HELP!\nPress the L Button!", MSGBOX_SIGN, PalletTown_PlayersHouse_2F_Text_Sign_Spa, PalletTown_PlayersHouse_2F_Text_Sign_Fre, PalletTown_PlayersHouse_2F_Text_Sign_Ita, PalletTown_PlayersHouse_2F_Text_Sign_Ger, PalletTown_PlayersHouse_2F_Text_Sign_Por)
	end
}text(local) PalletTown_PlayersHouse_2F_Text_Sign_Spa{
    "Anda, una nota...\pSi no sabes qué hacer, busca\nAYUDA. Pulsa el Botón L."
}text(local) PalletTown_PlayersHouse_2F_Text_Sign_Fre{
    "C’est un message…\pEn cas de problème, demande\nde l’AIDE avec le bouton L."
}text(local) PalletTown_PlayersHouse_2F_Text_Sign_Ita{
    "È un biglietto appeso.\nC’è scritto:\pSe non sai cosa fare, usa la\nGUIDA! Premi il pulsante L."
}text(local) PalletTown_PlayersHouse_2F_Text_Sign_Ger{
    "Eine Nachricht…\pWenn du nicht weiter weißt,\nrufe das HILFE-Menü durch\lDrücken der L-Taste auf."
}text(local) PalletTown_PlayersHouse_2F_Text_Sign_Por{
    "É um aviso afixado...\pSe estiveres confuso, pede AJUDA!\nPressiona o Botão L."
}

script PalletTown_PlayersHouse_2F_EventScript_PC
{
    goto_if_questlog(EventScript_ReleaseEnd)
	lockall
	setvar(VAR_0x8004, HELPCONTEXT_BEDROOM_PC)
	special(Script_SetHelpContext)
	setvar(VAR_0x8004, 1)
	special(AnimatePcTurnOn)
	playse(SE_PC_ON)
	msgbox(Text_PlayerBootedUpPC)
	special(BedroomPC)
	waitstate
	special(SetHelpContextForMap)
	releaseall
	end
}

script EventScript_PalletTown_PlayersHouse_2F_ShutDownPC
{
	setvar(VAR_0x8004, 1)
	playse(SE_PC_OFF)
	special(AnimatePcTurnOff)
	special(SetHelpContextForMap)
	releaseall
	end
}
